<UserControl x:Class="HospitalApp.View.UC.UCSheduleHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalApp.View.UC"
             mc:Ignorable="d" DataContext="UserControl_DataContextChanged">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="BlockDay" Style="{StaticResource BlockHeaderDay}" Text="СБ"/>
            <TextBlock x:Name="BlockDate"  Style="{StaticResource BlockCommon}"
                       Width="auto" Text="11 декабря" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
